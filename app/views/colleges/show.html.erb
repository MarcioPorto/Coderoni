<br>
<!-- Main Content -->
<div class="container">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="school-info.html"><%= @college.name %></a>
                </h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-4">
                    <% if @college.name == "Macalester College" %>
                    <%= image_tag("macalester.png", :size => "200x200") %>
                    <% elsif @college.name == "Carleton College" %>
                    <%= image_tag("carleton.png", :size => "200x200") %>
                    <% else %>
                    <%= image_tag("nyu.png", :size => "200x200") %>
                    <% end %>
                </div>
                <div class="col-lg-8">
                    
                    <h3>Tuition:            $ <%= @college.tuition_cost %></h3>
                    <h3>Early Career Pay:   $ <%= @college.early_career_pay %></h3>
                    <h3>Mid Career Pay:     $ <%= @college.mid_career_pay %></h3>

                </div>
            </div>
        </div>
    </div>

    <br>

    <h1 style="text-align:center;"><%= @college.name %></h1>

    <br>

    <div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="btn btn-success btn-lg btn-block" id="tuition-costs-category">Tuition/Costs</div>
            </div>
        </div>
        <div id="tuition-costs-table" style="display:none;">
            <br>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Macalester Costs</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tuition</td>
                                <td>$50,418</td>
                            </tr>
                            <tr>
                                <td>Room</td>
                                <td>$6,020</td>
                            </tr>
                                <td>Board</td>
                                <td>$5,246</td>
                            </tr>
                                <td>Activity Fee</td>
                                <td>$221</td>
                            </tr>
                                <td>Your Transportation Costs (SFO to MSP)</td>
                                <td>$300 * 3 = $900</td>
                            </tr>
                                <td>Off-Campus Housing</td>
                                <td>$6,750 - $9,000</td>
                            </tr>
                                <td>Textbook Cost</td>
                                <td>$1,249</td>
                            </tr>
                                <td>Average Lifestyle Costs</td>
                                <td>$441</td>
                            </tr>
                            <tr class="active">
                                <td>Total</td>
                                <td>$62,229 - $64,495</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="btn btn-danger btn-lg btn-block" id="aid-money-category">Aid/$</div>
            </div>
        </div>
        <div id="aid-money-table" style="display:none;">
            <br>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Macalester Aid</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Need-based Aid Proportion</td>
                                <td>67%</td>
                            </tr>
                            <tr>
                                <td>Average Need-based Financial Aid Package</td>
                                <td>$6,750 - $9,000</td>
                            </tr>
                                <td>Merit-based Aid Proportion</td>
                                <td>40%</td>
                            </tr>
                                <td>Merit-based Aid Amount</td>
                                <td>$2,000 - $18,000</td>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>
    <br>
    <br>

</div>

<script type="text/javascript">
    $('#tuition-costs-category').click(function() {
        $('#tuition-costs-table').toggle();
    });

    $('#aid-money-category').click(function() {
        $('#aid-money-table').toggle();
    });
</script>
